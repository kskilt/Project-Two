<h4> Search by Movie </h4>
<%= form_tag(theater_showings_path, method: :get) do %>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag ("Search") %>
<% end %>
<h3><%= @theater.name%>
<div id="showings">
  <% @showings.each do |showing| %>
  <% if showing.theater_id == @theater.id %>
    <h2><%= link_to showing.movie.name, movie_path(showing.movie_id) %></h2>
    <ul>
      <li>
        Showing Day - <%= showing.time.strftime("%b %d  - %Y") %>
      </li>
      <li>
        Showing Time - <%= showing.time.strftime("%I:%M %p") %>
      </li>
        <%= button_to "Delete Showing", theater_showing_path(showing.theater,showing),
        method: :delete, data: { confirm: 'Are you sure?!' } %>
      <br>
    </ul>
    <% end %>
  <% end %>
</div>
<h3> Create new Showing: </h3>
<%= render 'form' %>



